<div class="container">
  <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
                    <div class="restaurant-category"><%= restaurant.category.name %></div>
                    <p class="card-text"><%= restaurant.description %></p>
                    <div class="restaurant-rating"><%= restaurant.rating %></div>
                </div>
            </div>
        </div>
      <% end %>
  </div>
</div>
